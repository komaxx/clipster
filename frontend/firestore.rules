rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /clipz/{doc} {
    	allow read, write: 
      if request.auth != null 
      && request.auth.uid != null
      && request.auth.uid == doc;
    }
    
    match /clipz/{doc}/clipz/{document=**} {
    	allow read, write: 
      if request.auth != null 
      && request.auth.uid != null
      && request.auth.uid == doc;
    }
  
    match /{document=**} {
      allow read, write: if false;
    }
  }
}